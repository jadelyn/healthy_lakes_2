<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "org.lawrencehallofscience.*"
    versionCode = "10" 
    version     = "1.0.0" >


    <name>Healthy Lakes</name>

    <description>
        A decision-based interactive on whether images are indicative of a healthy or unhealthy lake 
    </description>

    <author href="www.lawrencehallofscience.org">
        Lawrence Hall of Science
    </author>


    <!-- Customize your app and platform with the preference element. -->
    <preference name="orientation"                value="landscape" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="webviewbounce"              value="false" />           <!-- ios: control whether the screen 'bounces' when scrolled beyond the top -->    
    <preference name="UIWebViewBounce" value="false" />

</widget>